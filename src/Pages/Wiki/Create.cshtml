@page
@model EC_Website.Pages.Wiki.CreateWikiArticleModel

@{
    ViewData["Title"] = "Create Wiki Page";
}

<h1>Create</h1>

<h4>Wiki Article</h4>
<hr />
<div class="row">
    <div class="col-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WikiArticle.Title" class="control-label"></label>
                <input asp-for="WikiArticle.Title" class="form-control" />
                <span asp-validation-for="WikiArticle.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ejs-autocomplete id="articleCategories" dataSource="@ViewData["categories"]" placeholder="Article Categories" autofill="true">
                    <e-autocomplete-fields value="Name"></e-autocomplete-fields>
                </ejs-autocomplete>
                <ejs-button id="addCategoryButton" content="Add" action=""></ejs-button>
            </div>
            <div id="selectedCategories" class="my-3">

            </div>
            <div class="form-group">
                <label class="control-label">Article Content</label>
                <span asp-validation-for="WikiArticle.Content" class="text-danger"></span>
                <ejs-richtexteditor id="rich_texteditor" ejs-for="WikiArticle.Content" height="300">
                    <e-richtexteditor-toolbarsettings items="@ViewData["toolbars"]" enableFloating="true">
                    </e-richtexteditor-toolbarsettings>
                </ejs-richtexteditor>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $("#addCategoryButton").click((e) => {
            var categoryBadge = $("<span class='badge badge-dark p-2 mr-2'>Badge</span>");
            $("#selectedCategories").append(categoryBadge);
            $("#articleCategories").val("");
            e.preventDefault();
        });
    </script>
}
