@page
@model EC_Website.Pages.Wiki.CreateWikiArticleModel

@{
    ViewData["Title"] = "Create Wiki Page";
}

<h1>Create</h1>

<h4>Wiki Page</h4>
<hr />
<div class="row">
    <div class="col-12 col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IsFirstMainPage" />
            <div class="form-group">
                <label asp-for="WikiArticle.Title" class="control-label"></label>
                <input asp-for="WikiArticle.Title" class="form-control" />
                <span asp-validation-for="WikiArticle.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ejs-multiselect id="articleCategories" dataSource="@ViewData["categories"]" placeholder="Article Categories" ejs-for="SelectedCategories">
                    <e-multiselect-fields value="Name"></e-multiselect-fields>
                </ejs-multiselect>
                <a asp-page="/Wiki/Category/Create">Create new category</a>
            </div>           
            <div class="form-group">
                <label class="control-label">Article Content</label>
                <span asp-validation-for="WikiArticle.Content" class="text-danger"></span>
                <ejs-richtexteditor id="rich_texteditor" ejs-for="WikiArticle.Content" height="300">
                    <e-richtexteditor-toolbarsettings items="@ViewData["toolbars"]" enableFloating="true">
                    </e-richtexteditor-toolbarsettings>
                </ejs-richtexteditor>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-slug="Main_Page">Back to Main Page</a>
</div>
