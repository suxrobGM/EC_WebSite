    <div class="categories">
        @{
            var articleCategories = Model.Article.ArticleCategories.Where(i => i.ArticleId == Model.Article.Id);
            var categories = articleCategories as ArticleCategory[] ?? articleCategories.ToArray();

            if (!categories.Any())
            {
                <i>No categories found</i>
            }
            else
            {
                foreach (var articleCategory in categories)
                {
                    <a asp-page="/Wiki/Category/Index" asp-route-slug="@articleCategory.Category.Slug">@articleCategory.Category.Name</a>
