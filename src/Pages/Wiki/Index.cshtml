@page "{slug}"
@using EC_Website.Models.Wikipedia
@model EC_Website.Pages.Wiki.WikiArticleIndexModel

@{
    Layout = "_WikiLayout";
    ViewData["Title"] = Model.Article.Title;
}

@section SEO {
    <meta name="author" content="@Model.Article.Author" />
    @*<meta name="description" content="@Model.Article.Content.Substring(0, 50)" />*@
    <meta name="keywords" content="@Model.Article.Title" />
    <meta property="og:title" content="@Model.Article.Title" />
    @*<meta property="og:description" content="@Model.Article.Content.Substring(0, 50)" />*@
    <meta property="og:site_name" content="Wiki Economic Crisis" />
    <meta property="og:type" content="article" />
    <meta property="article:published_time" content="@Model.Article.Timestamp" />
    <meta property="article:author" content="@Model.Article.Author" />
    <meta property="article:tags" content="@Model.Article.Title" />
    <meta name="twitter:title" content="@Model.Article.Title" />
    @*<meta name="twitter:description" content="@Model.Article.Content.Substring(0, 50)" />*@
    <meta name="twitter:creator" content="@Model.Article.Author" />
    @*<meta name="twitter:card" content="@Model.Article.Content.Substring(0, 50)" />*@
    <meta name="twitter:site" content="Wiki Economic Crisis" />
}

<div class="tabs clearfix">
    <div class="tabsLeft">
        <ul>
            @if (Model.IsMainPage)
            {
                <li><a class="active" asp-page="./Index" asp-route-slug="@Model.Article.Slug">Main Page</a></li>
            }
            else
            {
                <li><a class="active" asp-page="./Index" asp-route-slug="@Model.Article.Slug">Article</a></li>
            }
        </ul>
    </div>
    <div id="simpleSearch">
        <input type="text" name="searchInput" id="searchInput" placeholder="Search Economic Crisis Wiki" size="12" />
        <div id="submitSearch"></div>
    </div>

    <div class="tabsRight">
        <ul>
            <li><a class="active" asp-page="/Wiki/Index" asp-route-slug="@Model.Article.Slug">Read</a></li>
            @if (User.HasMinimumRole(Role.Editor))
            {
                <li><a asp-page="./Create">Create</a></li>
                <li><a asp-page="./Edit" asp-route-id="@Model.Article.Id">Edit</a></li>
                <li><a asp-page="./Delete" asp-route-id="@Model.Article.Id">Delete</a></li>
            }
        </ul>
    </div>
</div>
