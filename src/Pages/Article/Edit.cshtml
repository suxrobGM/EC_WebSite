@page "{articleId}"
@model EC_WebSite.Pages.Article.EditArticleModel
@{
    ViewData["Title"] = "Edit Article";
}

@section Stylesheets  {
    <link rel="stylesheet" href="~/lib/fileupload/fileupload.css" />
}

<h2>Edit Article</h2>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Article.Title" class="control-label"></label>
                <input asp-for="Input.Article.Title" class="form-control" />
                <span asp-validation-for="Input.Article.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Article.Summary" class="control-label"></label>
                <textarea asp-for="Input.Article.Summary" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Input.Article.Summary" class="text-danger"></span>
            </div>
            <div class="file-upload mb-2">
                @*<button class="file-upload-btn" type="button" onclick="$('.file-upload-input').trigger( 'click' )">Add Image</button>*@
                <label>Cover image</label>
                <div class="image-upload-wrap">
                    <input class="file-upload-input" asp-for="Input.CoverPhoto" type="file" onchange="readURL(this);" accept="image/*" />
                    <div class="drag-text">
                        <h3>Drag and drop a file or select add Image</h3>
                    </div>
                </div>
                <div class="file-upload-content">
                    <img class="file-upload-image" src="#" alt="your image" />
                    <div class="image-title-wrap">
                        <button type="button" onclick="removeUpload()" class="remove-image">Remove <span class="image-title">Uploaded Image</span></button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Article Text</label>
                <textarea asp-for="@Model.Input.Article.Content" id="@Model.Input.Article.Id" class="texteditor"></textarea>
                <span asp-validation-for="Input.Article.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts  {
    <script src="~/lib/fileupload/fileupload.js"></script>
    <script>
        let contentNodes = $.parseHTML('@Html.Raw(@Model.Input.Article.Content)');
        let unionNode = contentNodes[0];
        for (let i = 1; i < contentNodes.length; i++) {
            unionNode.append(contentNodes[i]);
        }
        $('#@Model.Input.Article.Id').summernote('insertNode', unionNode);  
    </script>
}

