@page
@model EC_Website.Pages.Forums.Board.CreateBoardModel
@{
    ViewData["Title"] = "Create Board";
}

<h2>Create Board</h2>

<h4>Board</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-forumHeadId="@Model.Board.ForumId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <span>
                    <label class="control-label">Create board for forum: </label>
                    <label class="control-label text-danger">@Model.ForumTitle</label>
                </span>
                @*<input class="form-control" asp-for="Board.Title" />*@
                @Html.TextBoxFor(m => m.Board.Title, new { @class = "form-control" })                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Index">Back to List</a>
</div>

