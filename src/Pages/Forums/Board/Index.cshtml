@page "{boardUrl}"
@model EC_Website.Pages.Forums.BoardIndexModel
@{
    ViewData["Title"] = Model.Board.Name;
}

@section Stylesheets  {
    <link href="~/css/forum-theme.css" rel="stylesheet" />
}

<div class="forum">
    <div class="forum-header">
        <span class="h3">@Model.Board.Name</span>
        @if (User.Identity.IsAuthenticated)
        {
            <span class="float-right">
                <a asp-page="/Forums/Thread/Create" asp-route-boardId="@Model.Board.Id"><i class="fas fa-plus-circle"></i></a>
                <a><i class="fas fa-wrench"></i></a>
            </span>
        }
        <ul class="breadcrumb text-primary mt-1 mb-0">
            <li class="breadcrumb-item"><a asp-page="/Forums/Index">@Model.Board.Forum.Name</a></li>
            <li class="breadcrumb-item"><a asp-page="/Forums/Board/Index" asp-route-boardUrl="@Model.Board.Id">@Model.Board.Name</a></li>
        </ul>
    </div>

    <div class="forum-body">
        <div class="forum-search-panel">
            <input class="ml-1" asp-for="@Model.SearchText" type="search" placeholder="Search" />
            <button class="btn btn-default btn-sm" style="margin: 10px" asp-action="SearchForum">Search</button> <!---->
        </div>
        <table id="tableforum" class="table table-bordered">
            <thead class="forum-table-head">
                <tr>
                    <th>
                        <strong>Thread</strong>
                    </th>
                    <th>
                        <strong>Author</strong>
                    </th>
                    <th>
                        <strong>Posts</strong>
                    </th>
                    <th>
                        <strong>Last Post</strong>
                    </th>
                    <th style="text-align: center">
                        <strong>+ Fav</strong>
                    </th>
                </tr>
                <tr class="forum-category">
                    <th colspan="3">
                        <strong>@Model.Board.Name</strong>
                    </th>
                    <th colspan="2" style="background-color: teal; text-align:center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span>
                                <a style="color: azure" asp-page="/Forums/Thread/Create" asp-route-boardId="@Model.Board.Id"><strong>New thread</strong></a>
                            </span>
                        }
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var thread in Model.Board.Threads)
                {
                    <tr style="color: black">
                        <td>
                            <span style="float: left">
                                <a style="color: saddlebrown" asp-page="/Forums/Thread/Index" asp-route-threadUrl="@thread.Url">@thread.Name</a>
                            </span>
                            @if (User.HasMinimumRole(Role.Moderator))
                            {
                                <span style="float: right">
                                    <a href="#" class="glyphicon glyphicon-ok"></a>
                                    <a href="#" class="glyphicon glyphicon-remove"></a>
                                </span>
                            }
                        </td>
                        <td>
                            <a asp-page="/User/Index" asp-route-username="@thread.Author.UserName">@thread.Author.UserName</a>
                        </td>
                        <td>
                            <label>@thread.Posts.Count()</label>
                        </td>
                        <td>
                            @{
                                var lastPost = thread.Posts.Last();
                                <a asp-page="/Forums/Thread/Index" asp-route-threadUrl="@thread.Url" asp-fragment="@lastPost.Id">@lastPost.Author.UserName - @lastPost.Timestamp.ToShortDateString()</a>
                            }
                        </td>
                        <td style="text-align: center">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-page-handler="AddFavoriteThread" asp-route-threadUrl="@thread.Url" method="post">
                                    <button class="rounded-circle btn-nobackground" data-toggle="tooltip" data-placement="top" title="Add thread to favorites list"><i class="fa fa-plus"></i></button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
