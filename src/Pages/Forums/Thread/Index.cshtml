@page "{threadId}"
@model EC_WebSite.Pages.Forums.ThreadIndexModel
@{
    ViewData["Title"] = Model.Thread.Name;
}

<head>
    <link href="~/css/forum-theme.css" rel="stylesheet" />
</head>

<div class="forum">
    <div class="container-fluid">
        <div class="row">
            <div class="col-10">
                <h3>Forum Thread</h3>
            </div>
            <div class="col-12">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Forums/Index">@Model.Thread.Board.Forum.Name</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Forums/Board/Index" asp-route-boardId="@Model.Thread.Board.Id">@Model.Thread.Board.Name</a></li>
                    <li class="breadcrumb-item"><a asp-page="/Forums/Thread/Index" asp-route-threadId="@Model.Thread.Id">@Model.Thread.Name</a></li>
                </ul>
            </div>               
        </div>
    </div>

    <div class="forum-body">
        <div class="forum-search-panel">
            <input class="ml-1" asp-for="@Model.SearchText" type="search" placeholder="Search" />
            <button class="btn btn-sm" style="margin: 10px" asp-action="SearchForum">Search</button>
        </div>
        <table id="tableforum" class="table table-bordered">
            <thead class="forum-table-head">
                <tr>
                    <th width="150">
                        <strong>Author</strong>
                    </th>
                    <th>
                        <strong>Posts</strong>
                    </th>
                </tr>
                <tr class="forum-category">
                    <th>
                        <strong>@Model.Thread.Name</strong>
                    </th>
                    <th style="background-color: teal; text-align: center">
                        <a style="color: azure" href="#post_reply"><strong>Post Reply</strong></a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td></td>
                        <td height="25" style="color: black; background-color: antiquewhite">
                            <div class="row">
                                <div class="col-6">
                                    <a href="#post_reply" onclick="quoteToPost('@Model.Thread.Id', '@post.Id', '@post.Author.UserName')"><b>Quote</b></a>
                                </div>
                                <div class="col-6">
                                    <form asp-page-handler="DeletePost" asp-route-postId="@post.Id" method="post">
                                        <span class="float-right">
                                            <span class="mr-1">@post.CreatedTime.Value.ToString("MMM dd yyyy HH:mm")</span>
                                            @if (User.Identity.Name == post.Author.UserName ||
                                                 User.IsInRole("SuperAdmin") ||
                                                 User.IsInRole("Admin") ||
                                                 User.IsInRole("Moderator")
                                             )
                                            {
                                                <a><i class="fas fa-wrench"></i></a>
                                                <button type="submit" class="delete-item btn-nobackground"><i class="fas fa-minus-circle"></i></button>
                                            }
                                        </span>
                                    </form>
                                </div>
                            </div>                       
                        </td>
                    </tr>
                    <tr style="color: black">
                        <td>
                            @{
                                <a asp-page="/User/Index" asp-route-username="@post.Author.UserName"><img class="rounded" src="@post.Author.ProfilePhoto.GetDataBase64()" alt="Author photo" style="height: 70px; width: 70px" /></a>
                                <a class="d-block" asp-page="/User/Index" asp-route-username="@post.Author.UserName">@post.Author.UserName</a>

                                var userRoles = await Model.GetUserRolesAsync(post.Author);

                                <span>
                                    @foreach (var role in userRoles)
                                    {
                                        if (role == "SuperAdmin" || role == "Admin")
                                        {
                                            <label class="badge badge-dark m-0">@role</label>
                                        }
                                        else if (role == "Moderator")
                                        {
                                            <label class="badge badge-danger m-0">@role</label>
                                        }
                                        else if (role == "Developer")
                                        {
                                            <label class="badge badge-success m-0">@role</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-info m-0">@role</label>
                                        }
                                    }

                                    @foreach (var userSkill in post.Author.UserSkills)
                                    {
                                        <label class="badge badge-warning m-0">@userSkill.Skill.Name</label>
                                    }
                                </span>
                            }
                        </td>
                        <td id="@post.Id" style="background-color: snow">
                            @Html.Raw(post.Text)
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2">
                        @{
                            var prevDisabled = !Model.Posts.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !Model.Posts.HasNextPage ? "disabled" : "";
                            int currentPage = Model.Posts.PageIndex;

                            <ul class="pagination mb-0">
                                <li class="page-item @prevDisabled"><a class="page-link" asp-page="./Index" asp-route-pageIndex="@(Model.Posts.PageIndex - 1)">Previous</a></li>
                                @for (int i = currentPage; i <= currentPage + 3; i++)
                                {
                                    var activePage = i == currentPage ? "active" : "";
                                    if (i <= Model.Posts.TotalPages)
                                    {
                                        <li class="page-item @activePage"><a class="page-link" asp-page="./Index" asp-route-pageIndex="@i">@i</a></li>
                                    }                                   
                                }
                                <li class="page-item @nextDisabled"><a class="page-link" asp-page="./Index" asp-route-pageIndex="@(currentPage + 1)">Next</a></li>
                            </ul>
                        }
                    </td>
                </tr>
            </tfoot>
        </table>                    
    </div>
</div>

<div id="post_reply" class="container-fluid mt-3" style="background-color: black; border-radius: 10px;">
    @if (User.Identity.IsAuthenticated)
    {
        <form asp-page-handler="AddPost" method="post">
            <label class="control-label" style="color: aliceblue; font: bolder">Reply to thread</label>           
            @Html.EditorFor(m => m.PostText, additionalViewData: new { htmlAttributes = new { id = Model.Thread.Id, @class = "post-texteditor" } })
            <input type="submit" class="btn btn-sm my-2" value="Post Reply" />
        </form>
    }
</div>
    
