@page
@model EC_WebSite.Pages.Home.CreateArticleModel

@{
    ViewData["Title"] = "Create Article";
}

<h2>Create Article</h2>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="Article.Topic" class="control-label"></label>
                <input asp-for="Article.Topic" class="form-control" />
                <span asp-validation-for="Article.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Article Text</label>
                <span asp-validation-for="Article.Text" class="text-danger"></span>
                @Html.EditorFor(m => m.Article.Text, additionalViewData: new { htmlAttributes = new { id = "summernote" } })
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

