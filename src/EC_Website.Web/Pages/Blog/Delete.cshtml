@page
@model EC_Website.Web.Pages.Blog.DeleteModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete Blog"];
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Are you sure you want to delete this"]?</h3>
<div>
    <h4>@Localizer["Article"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Blog.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Slug)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tags)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Timestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Blog.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Blog.Author.UserName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Blog.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-slug="@Model.Blog.Slug">@Localizer["Back to Article"]</a>
    </form>
</div>
