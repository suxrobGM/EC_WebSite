@page
@model EC_Website.Web.Pages.Forums.Thread.DeleteModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete Thread"];
}

<h1>@ViewData["Title"]</h1>

<h3>@Localizer["Are you sure you want to delete this"]?</h3>
<div>
    <h4>@Localizer["Thread"] "@Model.Thread.Title"</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thread.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thread.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thread.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thread.Timestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thread.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thread.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thread.Slug)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thread.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thread.IsLocked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thread.IsLocked)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Thread.IsPinned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Thread.IsPinned)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Posts"]
        </dt>
        <dd class="col-sm-10">
            @Model.Thread.Posts.Count
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Thread.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-slug="@Model.Thread.Slug">@Localizer["Back to Thread"]</a>
    </form>
</div>
