@page
@model EC_Website.Web.Pages.Forums.Thread.DeletePostModel

@{
    ViewData["Title"] = "Delete Post";
}

<h1>Delete Post</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Thread
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Thread.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Author.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Timestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Post.Content)
        </dd>
    </dl>
    
    <form method="post" asp-route-postId="@Model.Post.Id" asp-route-threadId="@Model.Post.ThreadId">
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-page="./Index" asp-route-slug="@Model.Post.Thread.Slug">Back to Thread</a>
    </form>
</div>
