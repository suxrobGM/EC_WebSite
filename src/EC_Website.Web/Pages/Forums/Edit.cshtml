@page
@model EC_Website.Web.Pages.Forums.EditModel
@{
    ViewData["Title"] = "Edit Forum";
}

<h2>Edit Forum</h2>

<h4>Forum &quot;@Model.Forum.Title&quot;</h4>
<hr />

<div class="row">
    <div class="col-12 col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Forum.Id"/>
            <div class="form-group">
                <label class="control-label">Forum head name:</label>
                <input asp-for="Forum.Title" class="form-control" />
                <span asp-validation-for="Forum.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}