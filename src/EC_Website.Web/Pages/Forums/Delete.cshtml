@page
@model EC_Website.Web.Pages.Forums.DeleteModel

@{
    ViewData["Title"] = "Delete Forum";
}

<h1>Delete Forum</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Forum "@Model.Forum.Title"</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forum.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forum.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forum.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forum.Timestamp)
        </dd>
        <dt class="col-sm-2">
            Boards
        </dt>
        <dd class="col-sm-10">
            @Model.Forum.Boards.Count
        </dd>
        <dt class="col-sm-2">
            Threads
        </dt>
        <dd class="col-sm-10">
            @Model.Forum.Boards.SelectMany(i => i.Threads).Count()
        </dd>
        <dt class="col-sm-2">
            Posts
        </dt>
        <dd class="col-sm-10">
            @Model.Forum.Boards.SelectMany(i => i.Threads).Sum(i => i.Posts.Count)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Forum.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
