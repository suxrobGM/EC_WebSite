@page
@model EC_Website.Web.Pages.Article.DeleteModel

@{
    ViewData["Title"] = "Delete Article";
}

<h1>Delete Article</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Blog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Entry.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.Slug)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.Tags)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.Tags)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.Timestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.Author.UserName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Entry.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-slug="@Model.Entry.Slug">Back to Article</a>
    </form>
</div>
