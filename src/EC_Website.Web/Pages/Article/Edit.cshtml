@page

@model EC_Website.Web.Pages.Article.EditArticleModel
@{
    ViewData["Title"] = "Edit Article";
}

@section Head {
    <partial name="_SyncfusionScriptsPartial" />
    <link rel="stylesheet" href="~/lib/fileupload/fileupload.css" />
}

<h2>Edit Article</h2>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-12 col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Entry.Title" class="control-label"></label>
                <input asp-for="Input.Entry.Title" class="form-control" />
                <input type="hidden" asp-for="Input.Entry.Id" />
                <span asp-validation-for="Input.Entry.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Entry.Summary" class="control-label"></label>
                <textarea asp-for="Input.Entry.Summary" rows="4" class="form-control"></textarea>
                <span asp-validation-for="Input.Entry.Summary" class="text-danger"></span>
            </div>
            <div>
                <label>Cover image</label>
                <div class="file-upload mb-2">
                    @*<button class="file-upload-btn" type="button" onclick="$('.file-upload-input').trigger( 'click' )">Add Image</button>*@
                    <div class="image-upload-wrap">
                        <input class="file-upload-input" asp-for="Input.CoverPhoto" type="file" onchange="readURL(this);" accept="image/*" />
                        <div class="drag-text">
                            <h3>Drag and drop a file or select add Image</h3>
                        </div>
                    </div>
                    <div class="file-upload-content">
                        <img class="file-upload-image" src="@Model.Input.Entry.CoverPhotoPath" alt="your image" />
                        <div class="image-title-wrap">
                            <button type="button" onclick="removeUpload()" class="remove-image">Remove <span class="image-title">Uploaded Image</span></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.ArticleTags" class="control-label"></label>
                <input asp-for="Input.ArticleTags" class="form-control" />
                <span asp-validation-for="Input.ArticleTags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Entry.Content" class="control-label"></label>
                <span asp-validation-for="Input.Entry.Content" class="text-danger"></span>
                <ejs-richtexteditor id="rich_texteditor" ejs-for="Input.Entry.Content" height="300">
                    <e-richtexteditor-toolbarsettings items="@ViewData["toolbar"]" enableFloating="true">
                    </e-richtexteditor-toolbarsettings>
                </ejs-richtexteditor>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-slug="@Model.Input.Entry.Slug">Back to Article</a>
</div>

@section Scripts  {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/fileupload/fileupload.js"></script>

    @if (!string.IsNullOrEmpty(Model.Input.Entry.CoverPhotoPath))
    {
        <script>
            $('.file-upload-content').show();
            $('.image-upload-wrap').hide();
        </script>
    }
}