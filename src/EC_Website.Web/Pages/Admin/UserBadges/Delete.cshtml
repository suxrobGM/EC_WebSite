@page
@model EC_Website.Web.Pages.Admin.UserBadges.DeleteModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete User Badge"];
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Are you sure you want to delete this"]?</h3>
<div>
    <h4>@Localizer["User Badge"] "@Model.Badge.Name"</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Timestamp)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Badge.Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-page="./Index">@Localizer["Back to List"]</a>
    </form>
</div>
