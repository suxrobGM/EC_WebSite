@page
@model EC_Website.Web.Pages.Admin.UserBadges.DetailsModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Details User Badge"];
}

<h1>@Localizer["Details"]</h1>

<div>
    <h4>@Localizer["User Badge"] "@Model.Badge.Name"</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Badge.Timestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Badge.Timestamp)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Badge.Id">@Localizer["Edit"]</a> |
    <a asp-page="./Index">@Localizer["Back to List"]</a>
</div>
