@using EC_Website.Web.ViewModels
@model EC_Website.Web.ViewModels.SearchViewModel

<form id="searchbox" class="form-inline p-1" method="get" asp-page="/Forums/Search/Index" asp-route-filter="@Model">
    <div class="input-group my-1">
        <input asp-for="SearchString" type="search" class="form-control form-control-sm" placeholder="Search"/>
        <div class="input-group-append">
            <button type="submit" class="btn btn-sm btn-secondary"><i class="fas fa-search"></i></button>
        </div>
    </div>
    
    <div class="input-group my-1">
        <select asp-for="SearchPageType" asp-items="Html.GetEnumSelectList<SearchPageType>()" class="form-control form-control-sm ml-0 ml-sm-2"></select>
        <select asp-for="SearchType" asp-items="Html.GetEnumSelectList<SearchType>()" class="form-control form-control-sm ml-1 ml-sm-2"></select>
        <select asp-for="SearchTimeFrame" asp-items="Html.GetEnumSelectList<SearchTimeFrame>()" class="form-control form-control-sm ml-1 ml-sm-2"></select>
        <input asp-for="UserName" class="form-control form-control-sm ml-1 ml-sm-2" placeholder="Username"/>
    </div>
</form>