@page
@model EC_Website.Pages.Home.HomeIndexModel
@inject ApplicationDbContext Context
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Hearts of Iron IV: Economic Crisis";
}

@section SEO {
    <meta name="description" content="Hearts of Iron IV: Economic Crisis" />
    <meta name="keywords" content="ec, economic crisis, economic crisis 2013, hoi 4, hoi4, hoi 4, hoi IV, hoi ec, hoi4 ec, mod, hearts of iron 4, hearts of iron IV, economic crisis forum" />
    <meta property="og:title" content="Hearts of Iron IV: Economic Crisis" />
    <meta property="og:description" content="Hearts of Iron IV: Economic Crisis" />
    <meta property="og:site_name" content="Hearts of Iron IV: Economic Crisis" />
    <meta name="twitter:title" content="Hearts of Iron IV: Economic Crisis" />
    <meta name="twitter:description" content="Hearts of Iron IV: Economic Crisis" />
    <meta name="image" content="http://ec.suxrobgm.net/img/ec_logo_large.jpg" />
}

@section MainContent {
    <div>
        <hr />
        <div class="d-flex justify-content-center">
            <h3>@Localizer["Development News"]</h3>
            @if (User.HasMinimumRole(Role.Editor))
            {
                <span class="mx-2 mt-2"><a asp-page="/Article/Create" class="btn-sm btn-info">@Localizer["Create Article"]</a></span>
            }
        </div>
        <hr />
    </div>
    <div>
        @foreach (var entry in Model.BlogEntries)
        {
            <div class="card shadow-sm my-3">
                <div class="card-header">
                    <a class="text-dark font-weight-bold" asp-page="/Article/Index" asp-route-slug="@entry.Slug">@entry.Title</a>
                    <div class="float-right">
                        <b>@entry.Timestamp.ToString("MMM dd yyyy HH:mm")</b>
                        @if (User.HasMinimumRole(Role.Editor))
                        {
                            <a class="mx-2" asp-page="/Article/Edit" asp-route-id="@entry.Id" data-toggle="tooltip" data-placement="top" title="Edit this article" style="color: black"><i class="fa fa-wrench"></i></a>
                            <a class="mx-2" asp-page="/Article/Delete" asp-route-Id="@entry.Id" data-toggle="tooltip" data-placement="top" title="Delete this article" style="color: black"><i class="fa fa-times"></i></a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <p>@entry.Summary</p>
                    <img class="w-100" src="@entry.CoverPhotoUrl" alt="@entry.Title photo" />
                    <a role="button" class="btn btn-outline-dark mt-3" asp-page="/Article/Index" asp-route-slug="@entry.Slug">@Localizer["Read More"] »</a>
                </div>
                <div class="card-footer">
                    <i class="fa fa-user"></i>
                    <a asp-page="/User/Index" asp-route-username="@entry.Author.UserName" style="color: inherit">@entry.Author.UserName</a>
                    <div class="float-right">
                        @{
                            var likesCount = entry.LikedUserNames.Count;
                            if (!User.Identity.IsAuthenticated)
                            {
                                <a class="mx-2 text-dark text-decoration-none" asp-area="Identity" asp-page="/Account/Login" data-toggle="tooltip" data-placement="top" title="Sign in to like this article">
                                    <i class="far fa-heart">&nbsp;@likesCount</i>
                                </a>
                            }
                            else
                            {
                                <button id="like_btn" class="btn btn-sm" data-toggle="tooltip" data-placement="top" title="Like this article" onclick="likeArticle('@entry.Id')">
                                    <i class="fas fa-heart">&nbsp;@likesCount</i>
                                </button>
                            }
                        }

                        <span class="mx-2"><i class="fa fa-eye"></i>&nbsp;@entry.ViewCount</span>
                        <a class="text-dark" asp-page="/Article/Index" asp-route-slug="@entry.Slug" asp-fragment="comments">
                            @Localizer["Comments"] <span class="badge badge-dark rounded-circle">@entry.Comments.Count</span>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="pagination" class="d-flex">
        <pagination class="mx-auto" page-index="@Model.BlogEntries.PageIndex" total-pages="@Model.BlogEntries.TotalPages" base-url="/Home" />
    </div>
}

@section LeftSide {
    <div id="vk_groups" class="iframe-container my-2"></div>
}

@section RightSide {
    <div class="iframe-container my-2">
        <iframe src="https://discordapp.com/widget?id=261512941440860161&theme=dark" width="150" height="200" allowtransparency="true" frameborder="0"></iframe>
    </div>
}

@section Scripts {
    <script src="https://vk.com/js/api/openapi.js?160"></script>
    <script>
        VK.Widgets.Group("vk_groups", { mode: 3 }, 124436657);
    </script>
    <script>
        function likeArticle(articleId = "") {
            $.ajax({
                url: `/Article/Ajax?handler=LikeArticle&articleId=${articleId}`,
                type: "GET",
                success: function(result) {
                    $("#like_btn i").text(` ${result}`);
                }
            });
        }
    </script>
}
