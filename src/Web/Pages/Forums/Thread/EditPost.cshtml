@page
@model EC_Website.Pages.Forums.Thread.EditPostModel

@{
    ViewData["Title"] = "Edit Post";
}

@section Stylesheets {
    <partial name="_SyncfusionScriptsPartial" />
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-12 col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.Id" />
            <input type="hidden" asp-for="Post.Thread.Slug" />
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <span asp-validation-for="Post.Content" class="text-danger"></span>
                <ejs-richtexteditor id="rich_texteditor" ejs-for="Post.Content" height="300">
                    <e-richtexteditor-toolbarsettings items="@ViewData["toolbar"]" enableFloating="true">
                    </e-richtexteditor-toolbarsettings>
                </ejs-richtexteditor>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-slug="@Model.Post.Thread.Slug">Back to thread</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}