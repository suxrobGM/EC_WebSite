@page
@model EC_Website.Pages.Admin.UserBadges.EditModel

@{
    ViewData["Title"] = "Edit User Badge";
}

<h1>Edit</h1>

<h4>User Badge @Model.Badge.Name</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Badge.Id" />
            <div class="form-group">
                <label asp-for="Badge.Name" class="control-label"></label>
                <input asp-for="Badge.Name" class="form-control" />
                <span asp-validation-for="Badge.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Badge.Timestamp" class="control-label"></label>
                <input asp-for="Badge.Timestamp" class="form-control" disabled="disabled" />
                <span asp-validation-for="Badge.Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Badge.Description" class="control-label"></label>
                <textarea asp-for="Badge.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Badge.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
