@page "{forumHeadId}"
@model EC_WebSite.Pages.Forums.Board.CreateModel
@{
    ViewData["Title"] = "CreateBoard";
}

<h2>Create Board</h2>

<h4>Board</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <span>
                    <label class="control-label">Create board for forum: </label>
                    <label class="control-label text-danger">@Model.ForumName</label>
                </span>
                @Html.TextBoxFor(m => m.Board.Name, new { @class = "form-control" })                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Forums/Index">Back to List</a>
</div>

