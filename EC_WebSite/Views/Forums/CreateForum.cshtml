@model CreateForumViewModel

@{
    ViewData["Title"] = "CreateForum";
}

<h2>Create forum header</h2>

<h4>Forum header</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForum" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label">Forum header name:</label>
                <input asp-for="ForumName" class="form-control" />
                <span asp-validation-for="ForumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

